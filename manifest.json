{
    "name": "Mission Control - Bookmarks & Tasks",
    "author": "Surjith S M",
    "version": "1.0.0",
    "description": "Turn your New Tab into a Mission Control. Focus on your important tasks and organize your bookmarks.",
    "permissions": ["storage", "tabs", "bookmarks", "topSites", "notifications", "alarms", "contextMenus", "activeTab", "unlimitedStorage", "clipboardRead"],
    "manifest_version": 3,
    "short_name": "Mission Control",

    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "Open Mission Control"
    }
}